<p id="notice"><%= notice %></p>

<div class="container">
<h1>Browse or Start Your Letter <a class="magical" style="display:none;" href="/letters/new">here!</a></h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @letters.each do |letter| %>
      <tr>
        <td class="letter_custom"><%= letter.title %></td>
        <td class="letter_custom"><%= letter.body %></td>
        <td><%= link_to 'Open', letter %></td>
        <% if owner?(letter) %>
          <td><%= link_to 'Edit', edit_letter_path(letter)%></td>
          <td><%= link_to 'Delete', letter, method: :delete, data: { confirm: 'Are you sure?' }%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="lead2">
<button class="btn btn-primary" id="harrychild"><%= link_to 'New Letter', new_letter_path %></button>
</div>
</div>
<script>
  $(function() {

    $(".magical").fadeIn(2000, function() {
      $(".magical").removeClass("display:none");
    });
  });

</script>
